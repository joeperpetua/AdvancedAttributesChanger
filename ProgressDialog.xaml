<Window x:Class="AdvancedAttributesChanger.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing" Height="200" Width="400"
		WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBlock Name="Title" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <TextBlock Name="Message" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
    </StackPanel>
</Window>