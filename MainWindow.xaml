<Window x:Class="AdvancedAttributesChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedAttributesChanger"
        mc:Ignorable="d"
        Title="Windows Advanced Attributes Changer" Height="450" Width="800">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel>
                <RadioButton Name="singleFile" Checked="" Grid.Column="0">Run on single file</RadioButton>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Width="150" Grid.Column="0" Margin="5" HorizontalAlignment="Center"></TextBox>
                    <Button Grid.Column="1">Select File</Button>
                </Grid>
                
                
            </StackPanel>
            <StackPanel>
                <RadioButton Name="directory" Checked="">Run on directory</RadioButton>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
